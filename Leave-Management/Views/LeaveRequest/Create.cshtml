@model Leave_Management.Models.CreateLeaveRequestVM

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Apply for Leave</h1>

<hr />
<div class="row">
    <div class="col-md-8">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="LeaveTypeId" class="control-label"></label>
                @Html.DropDownListFor(q => q.LeaveTypeId, new SelectList(Model.LeaveTypes, "Value", "Text"), "Select Leave Type", new { @class = "form-control" })
                <span asp-validation-for="LeaveTypeId" class="text-danger"></span>
            </div>
            <div class="row">
                <div class="col-md-6">  
                    <div class="form-group">
                        <label asp-for="StartDate" class="control-label"></label>
                        <input asp-for="StartDate" class="form-control datepicker" />
                        <span asp-validation-for="StartDate" class="text-danger"></span>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="EndDate" class="control-label"></label>
                        <input asp-for="EndDate" class="form-control datepicker" />
                        <span asp-validation-for="EndDate" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <label asp-for="ReasonForRequest" class="control-label"></label>
                <textarea asp-for="ReasonForRequest" class="form-control" rows="3"></textarea>
                <span asp-validation-for="ReasonForRequest" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Request Leave" class="btn btn-primary btn-block" />
            </div>
        </form>

        <div>
            <a class="btn btn-block btn-outline-secondary" asp-action="Index">Back to List</a>
        </div>
    </div>    
</div>



@section Scripts {
    <script>
      $( function() {
          $(".datepicker").datepicker({
              dateFormat: "mm/dd/yy"
          });
      } );
    </script>
}

